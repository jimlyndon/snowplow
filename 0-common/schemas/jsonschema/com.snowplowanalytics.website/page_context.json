{
	"$schema": "http://iglucentral.com/schemas/com.snowplowanalytics.self-desc/schema/jsonschema/1-0-0#",
	"description": "Schema for a page context",
	"self": {
		"vendor": "com.snowplowanalytics.website",
		"name": "page_context",
		"format": "jsonschema",
		"version": "1-0-0"
	},

	"type": "object",
	"properties": {
		"category": {
			"type": "string"
		},
		"subCategory": {
			"type": "string"
		},
		"author": {
			"type": "string"
		},
		"whenPublished": {
			"type": "string",
			"format": "date"
		},
		"topics": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	},
	"minProperties": 1,
	"additionalProperties": false
}
